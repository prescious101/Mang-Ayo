<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dodgerBlue"
    tools:context=".MechanicDetails">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:textSize="25dp"
        android:gravity="center"
        android:background="@color/crimsonRed"
        android:textColor="@color/white"
        android:text="BOOK MECHANIC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="398dp"
        android:layout_height="668dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="25dp"
            android:layout_marginRight="35dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/mang_ayo_logo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/txtMDName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:hint="name"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/txtMDEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:hint="email"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/txtMDPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:hint="Phone number"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/txtMDSpecialty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:hint="Phone number"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btnConfirmBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:backgroundTint="@color/crimsonRed"
                android:text="BOOK MECHANIC"
                android:textColor="@color/white"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="160dp"
                tools:layout_editor_absoluteY="122dp" />

            <Button
                android:id="@+id/btnBackToMechanicsLoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:backgroundTint="@color/crimsonRed"
                android:text="BACK"
                android:textColor="@color/white"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="160dp"
                tools:layout_editor_absoluteY="122dp" />
        </LinearLayout>


    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>